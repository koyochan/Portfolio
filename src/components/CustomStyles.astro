---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* ここは元のライトモードのまま */
    --aw-font-sans: 'Nunito', sans-serif;
    --aw-font-serif: 'Roboto Slab', serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    /* ダークモード用の “標準” 背景色はデフォルトのままでも可 */
    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
      color: inherit;
    }
  }

  /* ダークモード */
  .dark {
    --aw-font-sans: 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable', serif;
    --aw-font-heading: 'Inter Variable', sans-serif;

    /* 背景を「緑っぽい黒」に (例: #021B08 / rgb(2,27,8) など) */
    --aw-color-bg-page: rgb(2, 27, 8);

    /* 文字は読みやすいよう淡めの黄緑系 (例: #BFE8BF / rgb(191,232,191) など) */
    --aw-color-text-heading: rgb(191, 232, 191);
    --aw-color-text-default: rgb(191, 232, 191);
    --aw-color-text-muted: rgba(191, 232, 191, 0.66);

    /* テーマカラーも必要に応じて緑寄りに変更 */
    --aw-color-primary: rgb(88, 195, 88);
    --aw-color-secondary: rgb(78, 156, 78);
    --aw-color-accent: rgb(109, 217, 109);

    /* 選択時の背景を少し明るめの緑に、文字は黒系 */
    ::selection {
      background-color: rgb(88, 195, 88);
      color: rgb(10, 10, 10);
    }
  }
</style>
